			<text>You start calibrating the drone...</text>
			<remove name="AEA_DEFENSE_NECRO_1_MISSILE" />
			<choice hidden="true">
				<text>Continue...</text>
				<event>
					<text>You finish calibrating the drone successfully.</text>
					<drone name="AEA_DEFENSE_NECRO_1_DRONE" />
					<choice hidden="true">
						<text>Continue...</text>
						<event load="COMBAT_CHECK_TOGGLE_LOAD" />
					</choice>
				</event>
			</choice>
		</event>
	</choice>
	<choice hidden="true">
		<text>Return to the toggle menu.</text>
		<event load="COMBAT_CHECK_TOGGLE_LOAD" />
	</choice>
</event>
