		  <event load="COMBAT_CHECK_AEA_COMBAT_NECRO_1_BEAM" />
	  </mod-append:choice>

	  <mod-append:choice req="AEA_COMBAT_NECRO_2_LASER" blue="false">
			<text>(Technomancy Drone II) Set the state of the drone. [Current mode: Laser]</text>
			<event load="COMBAT_CHECK_AEA_COMBAT_NECRO_2_LASER" />
		</mod-append:choice>
		<mod-append:choice req="AEA_COMBAT_NECRO_2_BEAM" blue="false">
			<text>(Technomancy Drone II) Set the state of the drone. [Current mode: Beam]</text>
			<event load="COMBAT_CHECK_AEA_COMBAT_NECRO_2_BEAM" />
		</mod-append:choice>
</mod:findName>

<event name="STORAGE_CHECK_AEA_O2SYS">
	<text>What do you want to do?</text>
	<checkCargo />
	<choice>
		<text>Nevermind.</text>
		<event load="STORAGE_CHECK" />
	</choice>

  <choice hidden="true">
    <text>Set Filtering System to Extinguisher Mode (Currently Enabled)</text>
    <event load="OPTION_INVALID"/>
  </choice>

  <choice>
    <text>Set Filtering System to Oxygen Mode</text>
    <event>
      <text>Your Filtering system shifts over to begin producing oxygen.</text>
      <remove name="AEA_ACID_O2SYS"/>
      <choice>
        <text>Continue...</text>
        <event>
          <text>The system's lifesupport subsystem slows down.</text>
          <augment name="AEA_ACID_O2SYS_OFF"/>
          <choice>
            <text>Continue...</text>
            <event load="STORAGE_CHECK" />
          </choice>
        </event>
      </choice>
    </event>
  </choice>
</event>


<event name="STORAGE_CHECK_AEA_O2SYS_OFF">
  <text>What do you want to do?</text>
  <checkCargo />
	<choice>
		<text>Nevermind.</text>
		<event load="STORAGE_CHECK" />
	</choice>

  <choice>
    <text>Set Filtering System to Extinguisher Mode</text>
    <event>
      <text>Your Filtering system shifts over to begin producing fire suppressent.</text>
      <remove name="AEA_ACID_O2SYS_OFF"/>
      <choice>
        <text>Continue...</text>
        <event>
          <text>The system's lifesupport subsystem becomes more efficient.</text>
          <augment name="AEA_ACID_O2SYS"/>
          <choice>
            <text>Continue...</text>
            <event load="STORAGE_CHECK" />
          </choice>
        </event>
      </choice>
    </event>
  </choice>

  <choice hidden="true">
    <text>Set Filtering System to Oxygen Mode (Currently Enabled)</text>
    <event load="OPTION_INVALID"/>
  </choice>
</event>


