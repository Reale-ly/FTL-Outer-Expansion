<?xml version="1.0" encoding="UTF-8"?>
<FTL>
<mod:findName type="event" name="STORAGE_CHECK_BUTTON">
  <mod-append:choice req="AEA_ACID_O2SYS" blue="true" hidden="true">
    <text>Acidic Filtering System.</text>
    <event load="STORAGE_CHECK_AEA_O2SYS" />
  </mod-append:choice>
  <mod-append:choice req="AEA_ACID_O2SYS_OFF" blue="true" hidden="true">
    <text>Acidic Filtering System.</text>
    <event load="STORAGE_CHECK_AEA_O2SYS_OFF" />
  </mod-append:choice>
  <mod-append:choice req="AEA_NECRO_CONVERT" blue="true" hidden="true">
    <text>Heretic Converter.</text>
    <event load="STORAGE_CHECK_AEA_NECRO_CONVERT" />
  </mod-append:choice>
</mod:findName>

<event name="STORAGE_CHECK_AEA_NECRO_CONVERT">
	<text>What do you want to do?</text>
  	<checkCargo />
	<choice>
		<text>Nevermind.</text>
		<event load="STORAGE_CHECK" />
	</choice>
	<choice req="engi">
		<text>Convert a Harmony Engi.</text>
		<event>
			<text>You see your Engi being swarmed by a cloud of nanites, It doesn't seem very nice for the Engi.</text>
			<item_modify>
				<item type="drones" min="-3" max="-3" />
			</item_modify>
			<transformRace class="engi">aea_necro_engi</transformRace>
			<choice>
				<text>Continue...</text>
				<event load="STORAGE_CHECK" />
			</choice>
		</event>
	</choice>
	<choice req="engi_separatist">
		<text>Convert a Separatist Engi.</text>
		<event>
			<text>You see your Engi being swarmed by a cloud of nanites, It doesn't seem very nice for the Engi.</text>
			<item_modify>
				<item type="drones" min="-2" max="-2" />
			</item_modify>
			<transformRace class="engi_separatist">aea_necro_engi</transformRace>
			<choice>
				<text>Continue...</text>
				<event load="STORAGE_CHECK" />
			</choice>
		</event>
	</choice>
	<choice req="engi_separatist_nano">
		<text>Convert a Separatist Engi.</text>
		<event>
			<text>You see your Engi being swarmed by a cloud of nanites, It doesn't seem very nice for the Engi.</text>
			<item_modify>
				<item type="drones" min="-2" max="-2" />
			</item_modify>
			<transformRace class="engi_separatist_nano">aea_necro_engi</transformRace>
			<choice>
				<text>Continue...</text>
				<event load="STORAGE_CHECK" />
			</choice>
		</event>
	</choice>
	<choice req="engi_defender">
		<text>Convert an Engi Defender.</text>
		<event>
			<text>You see your Engi being swarmed by a cloud of nanites, It doesn't seem very nice for the Engi.</text>
			<item_modify>
				<item type="drones" min="-5" max="-5" />
			</item_modify>
			<transformRace class="engi_defender">aea_necro_lich</transformRace>
			<choice>
				<text>Continue...</text>
				<event load="STORAGE_CHECK" />
			</choice>
		</event>
	</choice>
</event>

